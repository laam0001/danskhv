---
import MainLayout from "../layouts/MainLayout.astro";
import { Image } from "astro:assets";
import headset from "../assets/images/phones.svg";

---

  <section class="relative h-screen overflow-hidden">
    <div class="absolute inset-0 bg-green-50 bg-[url('/intro-baggrund.webp')] bg-cover bg-center animate-zoomIn">
      <a href="#section1">
        <div class="flex justify-center items-center lg:-mt-10">
          <Image class="mt-48 mx-4 transition duration-1000 ease-in-out hover:scale-105" src={headset} alt="Påfør høretelefoner" />
        </div>
      </a>
  
      <p class="text-center text-green-400 text-2xl font-display font-bold mx-5 mt-10">
        For den bedste visnings- og lydoplevelse <br> sæt dine høretelefoner i.
      </p>
      <p class="text-center text-green-400 font-sans text-xl mx-5 pt-8">
        Er du klar? <br> Klik på knappen for at starte!
      </p>
  
      <div class="relative inset-0 flex items-center justify-center z-30 py-10">
        <a href="#section1" class="font-sans mx-8 py-5 px-14 bg-green-400 hover:bg-red-400 text-white-100 hover:text-white-100 text-center barlow-condensed-bold uppercase text-4xl lg:text-4xl justify-center rounded-md drop-shadow-md transition duration-400 ease-in-out">
          Klar!
        </a>
      </div>
    </div>

    <div class="absolute bottom-0 w-full border-b-2 border-green-400"></div>
  </section>


