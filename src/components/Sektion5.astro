<div class="bg-red-400 py-20 videocontainer sticky top-[20%] w-full h-full">
	<video autoplay muted loop playsinline class="w-full" id="videofil">
		<source src="/video-scrubber.mp4" type="video/mp4">
		<source src="/video-scrubber.mp4" type="video/webm">
	</video>
	</div>
	<div class="h-screen videoscroller"></div>

    <div class="relative flex justify-end">
        <div class="flex flex-col w-full md:w-1/2 h-full justify-center gap-4 p-4 ">
            <div class="bg-black-100/50 text-white-100 text-[18px] p-10 mb-96">
                <p class="text-center font-display">Det er her, adrenalinen rammer. Det er her, hjertet banker stærkere. Når løbet går i gang, er der ikke noget, der kan måle sig med denne spænding.</p>
            </div>
        </div>


    
<script>
	const scrubbervideo = document.querySelector("#videofil");
	scrubbervideo.pause();	
	scroll(
		({ y }) => {
		if (!scrubbervideo.readyState) return;
		scrubbervideo.currentTime = scrubbervideo.duration * y.progress;
		},
		{
		target: document.querySelector(".videoscroller"),
		offset: ["start end", "end start"]
		}
	);
</script>