<section id="section4" class="bg-brown-100 pt-10 lg:-mt-[800px]">

    <!-- Mobil video -->
    <div class="lg:hidden videocontainer sticky top-[0%] w-full h-screen">
      <video muted loop playsinline class="w-full" id="videofil-mobil2">
          <source src="https://lna-mediedesign.dk/horse-in-mobile.mp4" type="video/mp4">
          <source src="https://lna-mediedesign.dk/horse-in-mobile.webm" type="video/webm">
      </video>
    </div>
    <div class="h-screen videoscroller2"></div>
  
    <!-- Desktop video -->
    <div class="hidden lg:block videocontainer sticky top-[0%] w-full">
      <video muted loop playsinline class="w-full" id="videofil-desktop2">
          <source src="https://lna-mediedesign.dk/horse-in-desktop.mp4" type="video/mp4">
          <source src="https://lna-mediedesign.dk/horse-in-desktop.webm" type="video/webm">
